@model Fiap08.Web.MVC.Models.Responsavel
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar de Responsável</h2>

@if (TempData["msg"] != null ) {
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(r => r.Nome)
        @Html.TextBoxFor(r => r.Nome, new { @class = "form-control", @placeholder = "Digite o nome do responsável..." })
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Telefone)
        @Html.TextBoxFor(r => r.Telefone, new { @class = "form-control", @type = "number", @placeholder = "Digite o telefone do responsável..." })
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary"/>
}

