@model _07.Fiap.Web.MVC.Models.Time
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Técnico</h2>
@using (@Html.BeginForm("Cadastrar", "Time"))
{
    <div>
        @Html.LabelFor(t => t.Nome)
        @Html.TextBoxFor(t => t.Nome, new { @class = "form-control", @placeholder = "Nome do Time..." })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(t => t.Mundial)
        @Html.LabelFor(t => t.Mundial)
    </div>

    <h1>Técnico</h1>
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(t => t.Tecnico.Nome)
            @Html.TextBoxFor(t => t.Tecnico.Nome, new { @class = "form-control", @placeholder = "Nome do Técnico..." })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Tecnico.Salario)
            @Html.TextBoxFor(t => t.Tecnico.Salario, new { @class = "form-control", @placeholder = "Digite o salario..." })
        </div>
    </fieldset>


}
