@model Fiap.NAC.Correcao.Models.Bebida
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextBoxFor(b => b.Nome, new { @class = "form-control", @placeholder = "digite o nome da bebida..." })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.DataValidade)
        @Html.TextBoxFor(b => b.DataValidade, new { @class = "form-control", @type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Valor)
        @Html.TextBoxFor(b => b.Valor, new { @class = "form-control", @type = "number" })
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(b => b.Alcoolismo)
        @Html.LabelFor(b => b.Alcoolismo)
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-success"/>
}