@model Fiap07.Web.MVC.Models.Jogador

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if(TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(j => j.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.DataNascimento)
        @Html.TextBoxFor(j => j.DataNascimento, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Time)
        @Html.DropDownListFor(j => j.TimeId, 
            ViewBag.churros as SelectList,
            "Selecione",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Posicao)
        @Html.EnumDropDownListFor(j => j.Posicao, "Selecione", new { @class = "form-control"})
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

